<div class="contentshow"><%= form_for(@article, html: {multipart: true}) do |f| %>

	<ul>
	<% @article.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :dead_line %><br />
		<%= f.text_field :dead_line %>
	</p>
	<p>
		<%= f.label :label %><br />
		<%= f.text_field :label %>
	</p>
	<p>
		<%= f.label :website %><br />
		<%= f.text_field :website %>
	</p>
	<p>
		<%= f.label :facebook %><br />
		<%= f.text_field :facebook %>
	</p>
	<p>
		<%= f.label :twitter %><br />
		<%= f.text_field :twitter %>
	</p>
	
	<p> <%= f.label :tags %>
<%= f.text_field :tag_list %>
	 </p>
	 
</p>
	 <p><%= f.label :featured? %>
	 <%= f.check_box :featured  %>

</p>
	 
	 
	<p>
		<% if @article.image.exists? %>
        <%= image_tag @article.image.url %><br/>
  		<% end %>
  		<%= f.label :image, "Attach a New Image" %><br />
 		 <%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>

 </div>